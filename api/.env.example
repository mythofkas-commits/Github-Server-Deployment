PORT=3002
GITHUB_TOKEN=
GITHUB_USERNAME=
WEBHOOK_SECRET=
PROJECTS_DIR=/var/deploy/projects
LOGS_DIR=/var/deploy/logs
BUILD_DIR=/var/deploy/builds
NGINX_ROOT=/var/www
NGINX_SITES_AVAILABLE=/etc/nginx/sites-available
NGINX_SITES_ENABLED=/etc/nginx/sites-enabled
PM2_BIN=pm2
MAX_CONCURRENT_DEPLOYS=1
# In production this must be a strong random string or the API will refuse to start.
SECRETS_MASTER_KEY=replace-with-strong-random-value
# Authentication / security
# Use `npm run setup:admin` to populate these automatically, or provide your own values.
ADMIN_USERNAME=admin
ADMIN_PASSWORD_HASH=
SESSION_SECRET=change-me-to-a-long-random-string
ALLOWED_ORIGIN=http://localhost:5173
# Maximum number of queued deployments waiting to run.
MAX_QUEUE_SIZE=50
# Path to the JSON file where regular user accounts are stored.
USERS_FILE=./data/users.json
# Command templates are hard-coded in api/lib/commandTemplates.js.
